<%- include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

                <div class="form-group">
                    <h2>Survey Title: <%= survey.Title %></h2>
                </div>
                <a href="/surveys/edit/title/<%= survey._id %>" class="btn btn-primary">
                    <i class="fas fa-edit"></i> 
                    Edit title
                </a>
                <br/>
                <br/>
                <br/>
                <% for(let i = 0; i < survey.Questions.length; i++) { %>
                <div class="form-group">
                    <h5>Q: <%= survey.Questions[i] %></h4>
                </div>
                <br/>
                <div class="container">
                <% for(let j = 0; j < survey.Choices[i].length; j++) { %>
                <div class="form-group">
                    <label for="choice<%= i %>">
                        <%= survey.Choices[i][j] %>
                    </label>
                </div>
                <br />
                <% } %>
                </div>
                <br/>
                <a href="/surveys/edit/question/<%= survey._id %>/<%= i %>" class="btn btn-primary">
                    <i class="fas fa-edit"></i> 
                    Edit this question
                </a>
                <br/>
                <br/>
                <br/>
                <% } %>
                <br/>
                <a href="/surveys/editadd/<%= survey._id %>" class="btn btn-primary">
                    <i class="fas fa-edit"></i> 
                    Add a question
                </a>
                <a href="/surveys/list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> 
                    Return
                </a>

        </div>

    </div>
</div>

<%- include ../partials/footer.ejs %>